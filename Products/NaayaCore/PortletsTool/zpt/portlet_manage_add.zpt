<span tal:replace="structure here/manage_page_header" />
<span tal:replace="structure python:here.manage_form_title(here, here, form_title='Add Portlet')" />

<form action="addPortlet" method="post">
<table border="0" cellspacing="2" cellpadding="2" width="100%">
	<tr>
		<td class="form-label" width="20%">Id</td>
		<td width="80%"><input type="text" name="id" size="30" value="" /></td>
	</tr>
	<tr>
		<td class="form-label">Title</td>
		<td><input type="text" name="title" size="30" value="" /></td>
	</tr>
	<tr>
		<td class="form-label" style="vertical-align: top">Type</td>
		<td tal:define="portlets_types here/getPortletsTypes">
			<tal:block tal:repeat="item python:portlets_types.keys()">
				<input type="radio" name="portlettype" tal:attributes="value item" /> <span tal:replace="python:portlets_types[item]" />
				<br />
			</tal:block>
		</td>
	</tr>
	<tr><td></td><td><input type="submit" value="Add" /></td></tr>
</table>
</form>

<span tal:replace="structure here/manage_page_footer" />
